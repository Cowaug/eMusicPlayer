<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.exos.emusicplayer">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DefaultTheme">
        <activity
            android:name=".GUI.GUI_SongDetails"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".GUI.GUI_Playlist" />
        <activity android:name=".GUI.GUI_SettingTheme" />
        <activity android:name=".GUI.GUI_Library">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <action android:name="android.intent.action.HEADSET_PLUG" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GUI.GUI_MediaPlayer"

            />
        <activity
            android:name=".GUI.GUI_Search"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>